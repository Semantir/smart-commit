{
  "name": "smart-commit",
  "displayName": "smart-commit",
  "description": "Local-first AI Git Commit Message Generator using WebLLM & WebGPU for VS Code.",
  "icon": "icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:smart-commit.open",
    "onView:smartCommit.sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-commit.open",
        "title": "Smart Commit: Open",
        "category": "Smart Commit"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smartCommit",
          "title": "Smart Commit",
          "icon": "resources/smart-commit.svg"
        }
      ]
    },
    "views": {
      "smartCommit": [
        {
          "id": "smartCommit.sidebar",
          "name": "Smart Commit",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Smart Commit",
      "properties": {
        "smartCommit.promptConfigUrl": {
          "type": "string",
          "default": "",
          "description": "Remote JSON URL for prompt hotfix configuration."
        },
        "smartCommit.promptConfigTtlMinutes": {
          "type": "number",
          "default": 1440,
          "description": "Cache TTL for prompt hotfix configuration (minutes)."
        },
        "smartCommit.defaultModel": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "large",
            "tiny"
          ],
          "description": "Default model for Smart Commit inference."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.79",
    "@sruim/nexus-design": "^0.1.1"
  }
}
